{% layout none %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      Here's your gift card for
      {{ shop.name }}
      !
    </title>
    <meta name="description" content="Here's your gift card!">    
    <script src="{{ 'vendor/qrcode.js' | shopify_asset_url }}" ></script>
    {{ 'application.css' | asset_url | stylesheet_tag }}
  </head>
  <body class="grid gap-12">
    <h2 class="text-center font-bold text-4xl">{{ gift_card.balance | money }}</h2>
    <div id="qr-code" class="w-[300px] mx-auto"></div>
    <div class="mockup-code max-w-min mx-auto">
        <pre data-prefix="$"><code>{{ gift_card.code }}</code></pre>
    </div>

    {% if gift_card.pass_url %}
      <a href="{{ gift_card.pass_url }}">
        <img
          id="apple-wallet-badge"
          src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
          width="120"
          height="40"
          alt="Add To Apple Wallet"
          loading="lazy"
        >
      </a>
    {% endif %}

    <script>
      new QRCode(document.getElementById('qr-code'), {
        text: '{{ gift_card.qr_identifier }}',
        width: 300,
        height: 300,
      });
    </script>
  </body>
</html>
