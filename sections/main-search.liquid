<h1 class="text-3xl mt-12 text-center">Search results for: <span class="font-bold">{{ search.terms | escape }}</span></h1>

<div class="my-6">
  <h2 class="text-2xl">Product</h2>
  <hr>
</div>

{% paginate search.results by 24 %}
  <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-3">
    {%- for item in search.results -%}
      <li class="mb-6">
        {%- case item.object_type -%}
          {%- when 'product' -%}
            {%- capture product_settings -%}vendor, title, price{%- endcapture -%}
            {%
              render 'card-product',
              card_product: item,
            %}
        {% endcase %}
      </li>
    {% endfor %}
  </ul>
{% endpaginate %}
<div class="my-6">
  <h2 class="text-2xl">Article</h2>
  <hr>
</div>
{% paginate search.results by 24 %}
  <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-3">
    {%- for item in search.results -%}
      <li class="mb-6">
        {%- case item.object_type -%}
          
          {%- when 'article' -%}
            {%
              render 'article-card',
              article: item,
            %}
        {% endcase %}
      </li>
    {% endfor %}
  </ul>
{% endpaginate %}
<div class="my-6">
  <h2 class="text-2xl">Page</h2>
  <hr>
</div>
{% paginate search.results by 24 %}
  <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-3">
    {%- for item in search.results -%}
      <li class="mb-6">
        {%- case item.object_type -%}
          {%- when 'page' -%}
            <a href="{{ item.url }}" class="link">
              {{ item.title | truncate: 50 | escape }}
            </a>
        {% endcase %}
      </li>
    {% endfor %}
  </ul>
{% endpaginate %}